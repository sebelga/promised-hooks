{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "root": true,
    "env": {
        "node": true
    },
     "extends": "airbnb-base",
     "plugins": [
        "mocha"
    ],
     "rules": {
        // enable additional rules
        "indent": ["error", 2, {"SwitchCase": 1}],
        "no-use-before-define": ["error", {"functions": false}],
        "prefer-rest-params": "off",
        "prefer-spread": "off",
        "no-underscore-dangle": "off",
        "no-param-reassign": "off",
        "max-len": ["error", 120],
        "mocha/no-exclusive-tests": "off",
        "strict": ["error", "global"]
     }
}
